<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E0FFFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="216dp"
        android:layout_height="199dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_image_background"
        android:scaleType="centerCrop"
        android:src="@drawable/nerva2"
        android:clipToOutline="true" />


    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background"
        android:text="Emergency"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergencyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/button_background"
        android:text="Cancel Emergency"
        android:textColor="#FFFFFF" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancelButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Πατήστε το κουμπί 'Cancel Emergency' για να ακυρώσετε την έκτακτη κλήση και να πάτε πίσω στην αρχική οθόνη"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/red">

    </TextView>




</RelativeLayout>